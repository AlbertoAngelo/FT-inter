@model InterFood.Entity.Truck
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h2>Editar Localização</h2>
            </div>
        </div>
        <!-- /. ROW  -->
        <hr />
        <div class="row">
            <form method="post" action="/Localizacao">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    <input type="hidden" name="IdTruck" value="@Model.IdTruck" />
                    <input type="hidden" name="IdPessoa" value="@Model.IdPessoa" />

                    <div style="margin-left:40px">
                        <label>CEP:</label>
                        <input type="text" class="form-control" name="CEP" value="@Model.CEP" />
                    </div>

                    <div style="margin-left:40px">
                        <label>Endereço:</label>
                        <input type="text" class="form-control" name="Endereco" value="@Model.Endereco" />
                    </div>

                    <div style="margin-left:40px">
                        <label>Numero:</label>
                        <input type="text" class="form-control" name="Numero" value="@Model.Numero" />
                    </div>

                    <div style="margin-left:40px">
                        <label>Bairro:</label>
                        <input type="text" class="form-control" name="Bairro" value="@Model.Bairro" />
                    </div>

                    <div style="margin-left:40px">
                        <label>Cidade:</label>
                        <input type="text" class="form-control" name="Cidade" value="@Model.Bairro" />
                    </div>

                    <div style="margin-left:40px">
                        <label>Estado:</label>
                        <input type="text" class="form-control" name="Estado" value="@Model.Estado" />
                    </div>

                    <div style="margin-left:40px">
                        <label>Referencia:</label>
                        <input type="text" class="form-control" name="Referencia" value="@Model.Referencia" />
                    </div>


                    <br />
                    <button type="submit" class="btn btn-success">Salvar</button>
                </div>
            </form>



        </div>

    </div>
</div>
<!-- /. PAGE WRAPPER  -->
