@model InterFood.Entity.Truck
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h2>Editar Usuario</h2>
            </div>
        </div>
        <!-- /. ROW  -->
        <hr />
        <div class="row">
            <form action="/Usuario" method="post">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">

                    <input type="hidden" name="IdTruck" value="@Model.IdTruck" />
                    <input type="hidden" name="IdPessoa" value="@Model.IdPessoa" />

                    <!--EDITAR EMAIL-->
                    <div style="margin-left:40px">
                        <label>Email:</label>
                        <input type="text" class="form-control" name="Email" value="@Model.Email" />
                    </div>


                    <!--EDITAR SENHA-->
                    <div style="margin-left:40px">
                        <label>Senha</label>
                        <input type="password" class="form-control" name="Senha" required/>
                    </div>

                    <div style="margin-left:40px">
                        <label>Confirmar Senha</label>
                        <input type="password" class="form-control" name="ConfirmSenha" required />
                    </div>

                    <!--BOTÔES DE SALVAR E CANCELAR-->
                    <br />
                    <button type="submit" class="btn btn-success">Salvar</button>
                </div>

            </form>

        </div>

    </div>
</div>

