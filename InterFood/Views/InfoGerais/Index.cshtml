@model InterFood.Entity.Truck

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h2>Editar Informações Basicas</h2>
            </div>
        </div>
        <!-- /. ROW  -->
        <hr />
        <div class="row">
            <form method="post" action="/InfoGerais">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                <input type="hidden" name="IdTruck" value="@Model.IdTruck" />
                <input type="hidden" name="IdPessoa" value="@Model.IdPessoa" />

                <div style="margin-left:40px">
                    <label>Nome do FoodTruck:</label>
                    <input type="text" class="form-control" name="NomeTruck" value="@Model.NomeTruck" />
                </div>

                <div style="margin-left:40px">
                    <label>Descrição do FoodTruck:</label>
                    <input name="DescricaoTruck" class="form-control" type="text" value="@Model.DescricaoTruck" />
                </div>

                <!--
                    <div class="form-group col-md-10" style="margin-left:40px">
                        <label for="exampleInputFile">select the image</label>
                        <input type="file" id="exampleInputFile" name="logo">
                        <p class="help-block">select the image</p>
                    </div>
                -->
                <br />
                <button class="btn btn-success">Salvar</button>
            </div>
            </form>
        </div>
    </div>
</div>

