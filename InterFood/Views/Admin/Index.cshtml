
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-lg-12">
                <h2>@ViewBag.NomeTruck</h2>
            </div>
        </div>
        <!-- /. ROW  -->
        <hr />
        <div class="row">
            <div class="col-lg-12 ">
                <div class="alert alert-info">
                    <strong>Welcome @ViewBag.Nome ! </strong> Você pode realizar suas alterações.
                </div>
            </div>
        </div>
        <!-- /. ROW  -->
        <div class="row text-center pad-top">

            <!-- EDITAR INFORMAÇÕES GERAIS -->
            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
                <div class="div-square">
                    <a href="/InfoGerais">
                        <i class="fa fa-circle-o-notch fa-5x"></i>
                        <h4>Informações Gerais</h4>
                    </a>
                </div>
            </div>




            <!-- EDITAR LOCALIZAÇÃO -->

            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
                <div class="div-square">
                    <a href="/Localizacao">
                        <i class="fa fa-map-marker fa-5x"></i>
                        <h4>Localização</h4>
                    </a>
                </div>

            </div>




            <!-- Editar Cardapio -->
            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
                <div class="div-square">
                    <a href="cardapio.html">
                        <i class="fa fa-bars fa-5x"></i>
                        <h4>Cardapio</h4>
                    </a>
                </div>

            </div>




            <!--EDITAR USUARIO -->
            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
                <div class="div-square">
                    <a href="/Usuario">
                        <i class="fa fa-users fa-5x"></i>
                        <h4>Editar Usuario</h4>
                    </a>
                </div>
            </div>

            <!--MINHAS INFORMAÇOES-->
            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
                <div class="div-square">
                    <a href="/Informacoes">
                        <i class="fa fa-child fa-5x"></i>
                        <h4>Minhas Informações</h4>
                    </a>
                </div>
            </div>
        </div>

    </div>

</div>


