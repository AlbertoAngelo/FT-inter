@model InterFood.Entity.Truck
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div id="page-inner">
        <form action="/Informacoes" method="post">
            <div class="row">
                <div class="col-md-12">
                    <h2>Editar Minhas Informações</h2>
                </div>
            </div>
            <!-- /. ROW  -->
            <hr />
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">

                    <input type="hidden" name="IdTruck" value="@Model.IdTruck" />
                    <input type="hidden" name="IdPessoa" value="@Model.IdPessoa" />

                    <div style="margin-left:40px">
                        <label>Nome:</label>
                        <input type="text" class="form-control" name="Nome" value="@Model.Nome"/>
                    </div>

                    <div style="margin-left:40px">
                        <label>Telefone:</label>
                        <input type="text" class="form-control" name="Telefone" value="@Model.Telefone"/>
                    </div>

                    <div style="margin-left:40px">
                        <label>Celular:</label>
                        <input type="text" class="form-control" name="Celular" value="@Model.Celular"/>
                    </div>

                    <br />
                    <button type="submit" class="btn btn-success">Salvar</button>
                </div>
            </div>
        </form>

    </div>
</div>
<!-- /. PAGE WRAPPER  -->
